  shorttitle = {Coupling {{Process-Based Models}} and {{Plant Architectural Models}}},
  booktitle = {Crop {{Modeling}} and {{Decision Support}}},
  author = {{de Reffye}, P. and Heuvelink, E. and Guo, Yan and Hu, Bao-Gang and Zhang, Bao-Gui},

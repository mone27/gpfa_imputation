}

@article{dechant_making_2019,
  title = {Making Full Use of Hyperspectral Data for Gross Primary Productivity Estimation with Multivariate Regression: {{Mechanistic}} Insights from Observations and Process-Based Simulations},
  shorttitle = {Making Full Use of Hyperspectral Data for Gross Primary Productivity Estimation with Multivariate Regression},

@article{friend_fluxnet_2007,
  title = {{{FLUXNET}} and Modelling the Global Carbon Cycle},
  author = {Friend, Andrew D. and Arneth, Almut and Kiang, Nancy Y. and Lomas, Mark and Og{\'e}e, J{\'e}r{\^o}me and R{\"o}denbeck, Christian and Running, Steven W. and Santaren, Jean-Diego and Sitch, Stephen and Viovy, Nicolas and Ian Woodward, F. and Zaehle, S{\"o}nke},

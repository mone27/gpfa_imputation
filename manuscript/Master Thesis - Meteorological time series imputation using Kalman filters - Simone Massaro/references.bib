  keywords = {EC,upscaling measurements},
  file = {/home/simone/Zotero/storage/8765TTTJ/Jung et al. - 2009 - Towards global empirical upscaling of FLUXNET eddy.pdf;/home/simone/Zotero/storage/8R8ZNIGU/2009.html}
}


@article{rubio_improving_2021,
  title = {Improving Predictions of Tropical Tree Survival and Growth by Incorporating Measurements of Whole Leaf Allocation},
  author = {Rubio, Vanessa E. and Zambrano, Jenny and Iida, Yoshiko and Uma{\~n}a, Mar{\'i}a Natalia and Swenson, Nathan G.},
  year = {2021},

  file = {/home/simone/Zotero/storage/C8AP47PB/Kraemer et al. - 2020 - Summarizing the state of the terrestrial biosphere.pdf;/home/simone/Zotero/storage/KMNGP3PS/bg-17-2397-2020-discussion.html}
}


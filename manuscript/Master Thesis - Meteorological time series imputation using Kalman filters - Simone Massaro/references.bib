  author = {Kim, Yeonuk and Johnson, Mark S. and Knox, Sara H. and Black, T. Andrew and Dalmagro, Higo J. and Kang, Minseok and Kim, Joon and Baldocchi, Dennis},
  year = {2020},
  journal = {Global Change Biology},
  volume = {26},
